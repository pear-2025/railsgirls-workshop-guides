<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">プロフィール編集</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_with(model: @user, url: profile_path, method: :patch, local: true, multipart: true) do |f| %>
            <div class="mb-3">
              <%= f.label :username, 'ユーザー名', class: 'form-label' %>
              <%= f.text_field :username, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :avatar, 'アイコン', class: 'form-label' %>
              <%= f.file_field :avatar, class: 'form-control' %>
            </div>

            <div>
              <%= f.submit '保存', class: 'btn btn-primary' %>
              <%= link_to '戻る', profile_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
